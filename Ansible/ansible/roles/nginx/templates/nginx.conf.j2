server {
    listen       {{ nginx_port }};
    server_name  {{ ansible_host }};

    location / {
        root   {{ nginx_root_dir }};
        index  {{ nginx_index }};
    }

    error_page  404              /404.html;

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   {{ nginx_root_dir }};
    }
}